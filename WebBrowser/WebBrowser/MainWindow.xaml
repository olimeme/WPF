<Window x:Class="Простой_Web_Browser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Простой_Web_Browser"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1200">
    <Grid>

        <ToolBar HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="80" >
            <TextBox Height="29" Margin="0,25,0,21" Width="227" Name="url" FontSize="18"/>
            <Button Content="Search" Height="29" VerticalAlignment="Top" Width="152" Margin="40,28,0,0" Background="#FFFFDC00" Foreground="Black" Click="Find" RenderTransformOrigin="0.462,1.425"/>
        </ToolBar>

        <WebBrowser Margin="0,80,0,0" Name="browser" />

    </Grid>
</Window>
